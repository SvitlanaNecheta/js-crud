{{!
Це код container файлу для index сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
}}
<main>
  <section>

    <div class="form">
      <h1 class="form__title">Список товарів </h1>
      <div class="product-list">
        {{#with data.products}}
        {{#if isEmpty}}
        <mark>Список товарів пустий</mark>
        {{else}}
        <ul>
          {{#each list}}
          <li class="form__card">
            <p>{{name}}</p>
            <p>{{price}}</p>
            <p>{{id}}</p>
            <p>{{description}}</p>
            <a href="/product-edit?id={{id}}" class="form__card__button">Редагувати</a>
          </li>
          {{/each}}
        </ul>
        {{/if}}
        {{/with}}
      </div>
    </div>
  </section>

  <section>
    <div class="form">
      <h1 class="form__title">Оновити товар</h1>
      <form method="POST" action="/product-edit">
        <div class="form__card__content">
          <div class="form__card__field">
            <label for="login" class="form__card__label">ID продукта:</label>
            <input type="id" name="id" class="form__card__input">
          </div>
          <div class="form__card__field">
            <label for="login" class="form__card__label">Назва продукта:</label>
            <input type="text" name="name" class="form__card__input">
          </div>
          <div class="form__card__field">
            <label for="login" class="form__card__label">Нова ціна:</label>
            <input type="number" name="price" class="form__card__input">
          </div>

          <div class="form__card__field">
            <label for="login" class="form__card__label">Короткий опис продукта:</label>
            <input type="text" name="description" class="form__card__input">
          </div>
          <button class="form__card__button">Оновити</button>
          <a href="/product-delete?id={{id}}" class="form__card__button1">Видалити</a>
        </div>
      </form>
    </div>
  </section>

</main>

